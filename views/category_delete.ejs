<%- include('layout') %>


<% if (category_products.length) { %>

  <p><strong>Delete the following products before attempting to delete this category.</strong></p>

  <div style='margin-left:20px;margin-top:20px'>

    <h4>Products</h4>

    <dl>
      <% category_products.forEach(function(product) { %>
        <dt>
          <a href=<%= product.url %>><%= product.name %></a>
        </dt>
        <dd><%= product.description %></dd>
      <% }); %>
    </dl>

  </div>

<% } else { %>

  <p>Do you really want to delete this Category?</p>

  <form method='POST' action=''>
    <div class='form-group'>
      <label for="answer" >To delete the entry please write the name of the planet we live in in lowercase.</label>
      <input id='product' class='form-control' placeholder="Enter secret code here!" name='answer' required='true'   />
    </div>
    <div class='form-group'>
      <input id='categoryid' class='form-control' type='hidden' name='categoryid' required='true' value=<%= category._id %> />
    </div>
    <button class='btn btn-primary' type='submit'>Delete</button>
  </form>

<% } %>


<%- include('footer') %>